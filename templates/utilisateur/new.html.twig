{# templates/user/new.html.twig #}

{% extends 'base.html.twig' %}
{% block stylesheets %}
{{ encore_entry_link_tags('style_accueil') }}
{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags('app') }}
{% endblock %}
{% block title %}Créer un nouvel utilisateur{% endblock %}

{% block body %}
    {# <h1>Créer un nouvel utilisateur</h1> #}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inscription</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet"  href="{{ asset('style/style.inscription.css') }}" />

    <link rel="stylesheet" href="css/style.inscription.css" />
  </head>
  <body>
    <main class="">
      <section class="container-form bg-white">
      {% if errors is defined and errors|length > 0 %}
        <div class="alert alert-danger">
          <ul>
            {% for error in errors %}
                <li>{{ error }}</li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
        <form class="bloc-inscription bg-blue" method="post">
    <section class="logo-titre">
        <a href="/index.html"><img src="{{ asset('images/logo-livrosphere.png') }}" height="50px" width="50px" /></a>
        <h5>INSCRIPTION</h5>
    </section>

    <section>
        <label for="nom">Nom</label>
        <input type="text" id="nom" name="nom" required />

        <label for="prenom">Prénom</label>
        <input type="text" id="prenom" name="prenom" required />

        <label for="pseudonyme">Pseudonyme</label>
        <input type="text" id="pseudonyme" name="pseudonyme" required />

        <label for="email">Email</label>
        <input type="email" id="email" name="email" required />

        <label for="mot_de_passe">Mot de passe</label>
        <input type="password" id="mot_de_passe" name="mot_de_passe" required />
    </section>

    <!-- Ajout du token CSRF -->
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">

    <section class="btnU">
        <button type="submit" class="btn btn-dark">M'inscrire</button>
    </section>
</form>

      </section>
    </main>

    <footer class="footer-container">
      <nav class="boutons-footer">
        <a href="{{ path('app_accueil')}}">Accueil</a>
        <a href="{{ path('app_categorie')}}">Catégories</a>
        <a href="{{ path('app_livre')}}">Nos livres</a>
        <a href="{{ path('mon_espace')}}">Mon espace</a>
        <a href="{{ path('app_a_propos')}}">À propos</a>
        <a href="{{ path('utilisateur_new')}}">S'inscrire</a>
        <a href="{{ path('app_connexion')}}">Se connecter</a>
      </nav>

      <section class="logo-reseaux">
        <a href="#" class="icon-reseaux"
          ><i class="fa-brands fa-instagram"></i
        ></a>
      </section>

      <nav class="pages-legales">
        <a href="{{ path('app_mentions_legales') }}">Mentions légales</a>
        <a href="{{ path('app_cgu') }}">Conditions générales d'utilisation</a>
      </nav>

      <section class="copyright">
        <p>© Livrosphère 2025</p>
      </section>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
{% endblock %}
