{% block body %}
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Catégories</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <header class="header-container bg-blue">
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <a href="{{ path('app_accueil') }}"
            ><img
              href="#"
              title="logo_livrosphère"
              src="{{ asset('images/logo-livrosphere.png') }}"
              height="80"
          /></a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="#">À propos</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Catégories</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/index.html">Accueil</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <h1>Liste des Livres</h1>

    <!-- Formulaire de filtre par catégorie -->
    <form method="get">
        <div>
            <label for="categorie">Filtrer par catégorie :</label>
            <select id="categorie" name="categorie">
                <option value="">Toutes les catégories</option>
                {% for categorie in categories %}
                    <option value="{{ categorie.id }}" {% if categorie.id == app.request.query.get('categorie') %}selected{% endif %}>
                        {{ categorie.nom }}
                    </option>
                {% endfor %}
            </select>
        </div>
        <button type="submit">Filtrer</button>
    </form>

    <h1>Liste des livres</h1>

<!-- Conteneur pour les cartes des livres -->
<div id="livresContainer" class="d-flex flex-wrap gap-3"></div>

<!-- Génération des données en JSON -->
<script>
    const livres = [
        {% for livre in livres %}
        {
            title: "{{ livre.titre|e('js') }}",
            auteur: "{{ livre.auteur|e('js') }}",
            anneePublication: "{{ livre.anneePublication|date('Y') }}",
            description: `{{ livre.resume|e('js') }}`,
            image: "{{ asset('uploads/' ~ livre.couverture) }}",
            link: "{{ path('livre_information', {id: livre.id}) }}"
        },
        {% endfor %}
    ];
</script>

<!-- Script pour le rendu dynamique des livres -->
<script>
    const livresContainer = document.getElementById("livresContainer");

    livres.forEach((livre) => {
        const card = document.createElement("div");
        card.className = "card h-100";
        card.style.width = "18rem";

        card.innerHTML = `
            <img src="${livre.image}" class="card-img-top" alt="${livre.title}" style="height: 300px; object-fit: cover;" />
            <div class="card-body">
                <h5 class="card-title">${livre.title}</h5>
                <p class="card-text text-truncate" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">${livre.description}</p>
                <p class="card-text"><small class="text-muted">Par ${livre.auteur}, ${livre.anneePublication}</small></p>
                <a href="${livre.link}" class="btn btn-primary">Voir les détails</a>
            </div>
        `;

        livresContainer.appendChild(card);
    });
</script>

