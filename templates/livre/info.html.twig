{% block stylesheets %}
{{ encore_entry_link_tags('style_aff_livres') }}
{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags('app') }}
{% endblock %}


{% block body %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Les livres</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Playwrite+GB+S:ital,wght@0,100..400;1,100..400&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="header-container">
      <nav class="navbar navbar-expand-lg navbar-light">
        <section class="container-fluid">
          <a href="/Accueil.html">
            <img
              title="logo_livrosphère"
              src="/image/logo-livrosphere.png"
              height="80"
              alt="Logo_livrosphère"
            />
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <section class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-white">
              <li class="nav-item">
                <a class="nav-link" href="/index.html">Accueil</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/categories.html">Nos livres</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/categories.html">Catégories</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">À propos</a>
              </li>
            </ul>
          </section>
        </section>
      </nav>
    </header>

    <main>
  <!-- Section titre -->
  <section class="titre-livrosphere">
    <h2>LIVROSPHÈRE</h2>
  </section>

  <!-- Section des détails du livre -->
  <section class="ajout">
    <figure class="cover-ajout">
      {% if livre.couverture %}
        <img
          src="{{ asset('uploads/' ~ livre.couverture) }}"
          height="400px"
          alt="Couverture du livre '{{ livre.titre }}'"
        />
      {% else %}
        <img
          src="/path/to/default_cover.jpg"
          height="400px"
          alt="Pas de couverture disponible"
        />
      {% endif %}
    </figure>

    <article class="info-livre">
      <h1>{{ livre.titre }}</h1>
      <dl>
        <dt>Auteur</dt>
        <dd>{{ livre.auteur }}</dd>

        <dt>Date de publication</dt>
        <dd>{{ livre.anneePublication|date('Y') }}</dd>

        <dt>Catégorie</dt>
        <dd>{{ livre.categorie.nom }}</dd>

        <dt>Résumé</dt>
        <dd>{{ livre.resume }}</dd>
      </dl>
    </article>
  </section>

  <!-- Section des interactions -->
  <section class="espace-interaction">
    <section class="bouton-interaction">
      <form method="POST" action="{{ path('toggle_like', {'id': livre.id}) }}" style="display: inline;">
        <button type="submit" aria-label="J'aime">
          <i
            class="like fa fa-heart {{ utilisateurALike ? 'btn-danger' : 'btn-primary' }}"
            aria-hidden="true"
          ></i>
        </button>
      </form>
      <span class="badge bg-secondary">{{ nombreLikes }}</span>

      <form method="POST" action="{{ path('toggle_recommandation', {'id': livre.id}) }}" style="display: inline;">
        <button type="submit" aria-label="Recommander">
          <i
            class="recommander fa fa-star {{ utilisateurARecommande ? 'btn-danger' : 'btn-success' }}"
            aria-hidden="true"
          ></i>
        </button>
      </form>
      <span class="badge bg-secondary">{{ nombreRecommandations }}</span>
    </section>

    <!-- Section des commentaires -->
    <section class="commentaires">
      <h3>Commentaires</h3>
      <section class="commentaires-ajouts">
        {% if commentaires is not empty %}
          {% for commentaire in commentaires %}
            <div>
              <p>
                <b>{{ commentaire.utilisateur.pseudonyme }}</b> 
                ({{ commentaire.dateCommentaire|date('d/m/Y H:i') }})
              </p>
              <p>{{ commentaire.message }}</p>
              {% if commentaire.modificationCommentaire %}
                <p><em>(Modifié)</em></p>
              {% endif %}
              {% if commentaire.utilisateur == app.user %}
                <a
                  href="{{ path('edit_commentaire', {'id': commentaire.id}) }}"
                  class="btn btn-warning"
                >
                  Modifier
                </a>
              {% endif %}
              {% if commentaire.utilisateur == app.user or is_granted('ROLE_ADMIN') %}
                <form
                  action="{{ path('delete_commentaire', {'id': commentaire.id}) }}"
                  method="POST"
                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');"
                >
                  <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
              {% endif %}
            </div>
          {% endfor %}
        {% else %}
          <p>Aucun commentaire pour ce livre.</p>
        {% endif %}
      </section>

      <!-- Formulaire pour ajouter un commentaire -->
      <h3>Ajouter un commentaire</h3>
      {{ form_start(form) }}
      {{ form_row(form.message) }}
      <button type="submit">Ajouter Commentaire</button>
      {{ form_end(form) }}
    </section>
  </section>
</main>


<footer class="footer-container">
    <nav class="boutons-footer">
        <a href="/Accueil.html">Accueil</a>
        <a href="/categories.html">Catégories</a>
        <a href="">À propos</a>
        <a href="/inscription.html">S'inscrire</a>
        <a href="/connexion.html">Se connecter</a>
    </nav>

      <section class="logo-reseaux">
        <a href="#" class="icon-reseaux"
          ><i class="fa-brands fa-instagram"></i
        ></a>
        <a href="#" class="icon-reseaux"
          ><i class="fa-brands fa-snapchat"></i
        ></a>
        <a href="#" class="icon-reseaux"
          ><i class="fa-brands fa-facebook"></i
        ></a>
        <a href="#" class="icon-reseaux"
          ><i class="fa-brands fa-x-twitter"></i
        ></a>
      </section>

      <nav class="pages-legales">
        <a href="">Mentions légales</a>
        <a href="">Conditions générales d'utilisation</a>
      </nav>

      <section class="copyright">
        <p>© Livrosphère 2024</p>
      </section>
</footer>
</body>
</html>
{% endblock %}
