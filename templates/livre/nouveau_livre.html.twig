{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau Livre{% endblock %}

{% block body %}
    <h1>Créer un nouveau Livre</h1>

    <form method="post" enctype="multipart/form-data">
        <div>
            <label for="titre">Titre :</label>
            <input type="text" id="titre" name="titre" required>
        </div>

        <div>
            <label for="auteur">Auteur :</label>
            <input type="text" id="auteur" name="auteur" required>
        </div>

        <div>
            <label for="annee_publication">Année de publication :</label>
            <input type="date" id="annee_publication" name="annee_publication" required>
        </div>

        <div>
            <label for="resume">Résumé :</label>
            <textarea id="resume" name="resume" required></textarea>
        </div>

        <div>
            <label for="couverture">Couverture :</label>
            <input type="file" id="couverture" name="couverture" accept="image/*">
        </div>

        <div>
            <label for="categorie">Catégorie :</label>
            <select id="categorie" name="categorie">
                {% for categorie in categories %}
                    <option value="{{ categorie.id }}">{{ categorie.nom }}</option>
                {% endfor %}
            </select>
        </div>

        <button type="submit">Créer le livre</button>
    </form>
{% endblock %}
