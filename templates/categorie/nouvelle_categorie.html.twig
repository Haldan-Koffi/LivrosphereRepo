{% extends 'base.html.twig' %}

{% block title %}Créer une Nouvelle Catégorie{% endblock %}

{% block body %}
    <h1>Nouvelle Catégorie</h1>

    <form method="post" action="{{ path('nouvelle_categorie') }}" enctype="multipart/form-data">
        <div>
            <label for="nom">Nom de la catégorie :</label>
            <input type="text" id="nom" name="nom" required>
        </div>

        <div>
            <label for="couverture_categorie">Couverture de la catégorie :</label>
            <input type="file" id="couverture_categorie" name="couverture_categorie" accept="image/*" required>
        </div>

        <button type="submit">Créer</button>
    </form>
{% endblock %}
