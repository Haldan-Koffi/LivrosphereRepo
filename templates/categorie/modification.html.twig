{% extends 'base.html.twig' %}
{% block stylesheets %}
{{ encore_entry_link_tags('style_accueil') }}
{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags('app') }}
{% endblock %}

{% block title %}Modifier une Catégorie{% endblock %}

{% block body %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Catégories</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <header class="header-container">
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <a href="{{ path('app_accueil') }}"
            ><img
              href="#"
              title="logo_livrosphère"
              src="{{ asset('images/logo-livrosphere.png') }}"
              height="80"
          /></a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="#">À propos</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Catégories</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_accueil') }}">Accueil</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
    <h1>Modifier la Catégorie</h1>

    <form method="post" action="{{ path('modification_categorie', {id: categorie.id}) }}" enctype="multipart/form-data">
    <div>
        <label for="nom">Nom de la catégorie :</label>
        <input type="text" id="nom" name="nom" value="{{ categorie.nom }}" required>
    </div>

    <div>
        <label for="couvertureCategorie">Couverture actuelle :</label>
        <img src="{{ asset('uploads/' ~ categorie.couvertureCategorie) }}" alt="Couverture de la catégorie" style="max-width: 100px; max-height: 100px;">
    </div>

    <div>
        <label for="couvertureCategorie">Nouvelle couverture :</label>
        <input type="file" id="couvertureCategorie" name="couvertureCategorie" accept="image/*">
    </div>

    <div>
        <label for="dateCreation">Date de création :</label>
        <input type="datetime-local" id="dateCreation" name="dateCreation" value="{{ categorie.dateCreation|date('Y-m-d\\TH:i') }}" required>
    </div>

    <!-- Ajout du champ CSRF -->
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">

    <button type="submit">Modifier</button>
</form>

    </main>
    <footer class="footer-container">
      <nav class="boutons-footer">
        <a href="{{ path('app_accueil')}}">Accueil</a>
        <a href="{{ path('app_categorie')}}">Catégories</a>
        <a href="{{ path('app_livre')}}">Nos livres</a>
        <a href="{{ path('mon_espace')}}">Mon espace</a>
        <a href="{{ path('app_a_propos')}}">À propos</a>
        <a href="{{ path('utilisateur_new')}}">S'inscrire</a>
        <a href="{{ path('app_connexion')}}">Se connecter</a>
      </nav>

      <section class="logo-reseaux">
        <a href="#" class="icon-reseaux"
          ><i class="fa-brands fa-instagram"></i
        ></a>
      </section>

      <nav class="pages-legales">
        <a href="{{ path('app_mentions_legales') }}">Mentions légales</a>
        <a href="{{ path('app_cgu') }}">Conditions générales d'utilisation</a>
      </nav>

      <section class="copyright">
        <p>© Livrosphère 2025</p>
      </section>
    </footer>
      </body>
</html>
    
{% endblock %}
