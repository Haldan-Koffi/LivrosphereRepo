{% block stylesheets %}
{{ encore_entry_link_tags('style_categorie') }}
{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Catégories</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <header class="header-container">
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <a href="{{ path('app_accueil') }}"
            ><img
              href="#"
              title="logo_livrosphère"
              src="{{ asset('images/logo-livrosphere.png') }}"
              height="80"
          /></a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="#">À propos</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Catégories</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_accueil') }}">Accueil</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <section class="titre-livrosphere">
        <h2>LIVROSPHÈRE</h2>
      </section>

      <section class="category-brand">
        <h1>Explorez notre univers littéraire</h1>
        <h3>Il y en a pour chaque lecteur</h3>
      </section>

      <section class="textbrand2">
        <h2>
          Chaque catégorie, une aventure littéraire, trouvez votre prochaine
          lecture !
        </h2>
      </section>
    <h1>Liste des catégories</h1>
    <!-- Conteneur des cartes -->
    <section id="categoriesContainer" class="d-flex flex-wrap gap-3"></section>
    <!-- Création des données -->
    <script>
    const categories = [
    {% for categorie in categories %}
    {
        id: {{ categorie.id }},
        title: "{{ categorie.nom|e('js') }}",
        image: "{{ asset('uploads/' ~ categorie.couvertureCategorie) }}",
        link: "{{ path('app_livre', {'categorie': categorie.id}) }}"
    },
    {% endfor %}
];

const container = document.getElementById("categoriesContainer");

categories.forEach((category) => {
    const card = document.createElement("div");
    card.className = "card h-100";
    card.style.width = "18rem";

    card.innerHTML = `
        <img src="${category.image}" class="card-img-top" alt="${category.title}" height="400" />
        <div class="card-body h-100">
            <h5 class="card-title">${category.title}</h5>
            <a href="${category.link}" class="btn btn-primary">Découvrir</a>
        </div>
    `;

    container.appendChild(card);
});

</script>

    </main>
    <footer class="footer-container bg-blue">
      <section class="buttons-footer">
        <a href="{{ path('app_accueil') }}" class="selection">Accueil</a>
        <a href="" class="selection">Catégories</a>
        <a href="" class="selection">Nos livres</a>
        <a href="" class="selection">Mon espace</a>
        <a href="" class="selection">À propos</a>
        <a href="" class="selection">S'inscrire</a>
        <a href="" class="selection">Se connecter</a>
      </section>

      <section class="logo-reseaux">
        <a href="#" class="icon-reseaux"
          ><i class="fa-brands fa-instagram"></i
        ></a>
      </section>

      <section class="pages-legales">
        <a href="" class="selection">Mentions légales</a>
        <a href="" class="selection">Conditions générales d'utilisation</a>
      </section>

      <section class="copyright">
        <p>© Livrosphère 2025</p>
      </section>
    </footer>
{% endblock %}
